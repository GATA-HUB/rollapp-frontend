{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@gata-rollapp/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/contracts" }
  ],
  "exclude": [
    "node_modules",
    "packages/web"
  ]
}
